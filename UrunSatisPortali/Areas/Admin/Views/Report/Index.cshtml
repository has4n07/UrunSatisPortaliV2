@model UrunSatisPortali.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Finansal Raporlar";
}

<div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Finansal Raporlar</h1>
    </div>

    <div class="row">
        <!-- Total Orders Card -->
        <div class="col-md-6 col-xl-4 mb-4">
            <div class="card bg-primary text-white h-100 shadow py-2">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small text-uppercase fw-bold">Toplam Sipariş</div>
                            <div class="h5 mb-0 fw-bold">@Model.TotalOrders</div>
                        </div>
                        <i class="bi bi-cart-fill display-4 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Revenue Card -->
        <div class="col-md-6 col-xl-4 mb-4">
            <div class="card bg-success text-white h-100 shadow py-2">
                 <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small text-uppercase fw-bold">Toplam Kazanç</div>
                            <div class="h5 mb-0 fw-bold">@Model.TotalRevenue.ToString("c")</div>
                        </div>
                        <i class="bi bi-currency-dollar display-4 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Welcome Card -->
        <div class="col-md-12 col-xl-4 mb-4">
            <div class="card bg-warning text-white h-100 shadow py-2">
                <div class="card-body">
                     <div class="d-flex justify-content-between align-items-center">
                        <div class="me-3">
                            <div class="text-white-75 small text-uppercase fw-bold">Hoşgeldiniz</div>
                            <div class="h5 mb-0 fw-bold">Admin Paneli</div>
                        </div>
                        <i class="bi bi-person-circle display-4 text-white-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Row -->
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 fw-bold text-primary">Aylık Kazanç Grafiği (@DateTime.Now.Year)</h6>
                </div>
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart" style="max-height: 400px; height: 400px; display: block; box-sizing: border-box; width: 100%;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById("myAreaChart");
        var myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: "Kazanç",
                    lineTension: 0.3,
                    backgroundColor: "rgba(78, 115, 223, 0.05)",
                    borderColor: "rgba(78, 115, 223, 1)",
                    pointRadius: 3,
                    pointBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointBorderColor: "rgba(78, 115, 223, 1)",
                    pointHoverRadius: 3,
                    pointHoverBackgroundColor: "rgba(78, 115, 223, 1)",
                    pointHoverBorderColor: "rgba(78, 115, 223, 1)",
                    pointHitRadius: 10,
                    pointBorderWidth: 2,
                    data: @Html.Raw(Json.Serialize(Model.ChartData)),
                }],
            },
            options: {
                maintainAspectRatio: false,
                layout: {
                    padding: {
                        left: 10,
                        right: 25,
                        top: 25,
                        bottom: 0
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        },
                        ticks: {
                            maxTicksLimit: 12
                        }
                    },
                    y: {
                        ticks: {
                            maxTicksLimit: 5,
                            padding: 10,
                            callback: function(value, index, values) {
                                return '₺' + value;
                            }
                        },
                        grid: {
                            color: "rgb(234, 236, 244)",
                            zeroLineColor: "rgb(234, 236, 244)",
                            drawBorder: false,
                            borderDash: [2],
                            zeroLineBorderDash: [2]
                        }
                    },
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                         callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += '₺' + context.parsed.y;
                                }
                                return label;
                            }
                        }
                    }
                }
            }
        });
    </script>
}
