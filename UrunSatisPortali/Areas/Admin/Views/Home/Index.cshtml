@model UrunSatisPortali.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800 fw-bold" style="font-family: 'Playfair Display', serif;">Genel Bakış</h1>
            <p class="text-muted small">Mağaza performansınızı buradan takip edebilirsiniz.</p>
        </div>
        <div>
            @* <button class="btn btn-sm btn-black shadow-sm"><i class="bi bi-download"></i> Rapor İndir</button> *@
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-4 mb-4">
        <!-- Total Orders -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted text-uppercase small fw-bold mb-1">Toplam Sipariş</p>
                            <h2 class="fw-bold mb-0" id="totalOrdersValue">@Model.TotalOrders</h2>
                        </div>
                        <div class="icon-shape bg-light text-primary rounded-circle p-3">
                            <i class="bi bi-bag-check fs-4 text-dark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Revenue -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted text-uppercase small fw-bold mb-1">Toplam Kazanç</p>
                            <h2 class="fw-bold mb-0" id="totalRevenueValue">@Model.TotalRevenue.ToString("c")</h2>
                        </div>
                        <div class="icon-shape bg-light text-success rounded-circle p-3">
                            <i class="bi bi-currency-dollar fs-4 text-dark"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Admin Welcome -->
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm bg-black text-white">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-white-50 text-uppercase small fw-bold mb-1">Durum</p>
                            <h5 class="fw-bold mb-0">Admin Paneli Aktif</h5>
                        </div>
                        <div class="icon-shape bg-white bg-opacity-10 rounded-circle p-3">
                            <i class="bi bi-shield-check fs-4 text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white py-3">
            <h6 class="m-0 fw-bold text-dark">Aylık Kazanç Grafiği (@DateTime.Now.Year)</h6>
        </div>
        <div class="card-body">
            <div class="chart-area" style="height: 400px;">
                <canvas id="myAreaChart"></canvas>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById("myAreaChart");
        // Use a more neutral, monochrome chart style
        window.myLineChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ChartLabels)),
                datasets: [{
                    label: "Kazanç",
                    tension: 0.4, // Smoother curve
                    backgroundColor: "rgba(0, 0, 0, 0.05)", // Very light black fill
                    borderColor: "#000000", // Black line
                    pointRadius: 4,
                    pointBackgroundColor: "#000000",
                    pointBorderColor: "#fff",
                    pointHoverRadius: 6,
                    pointHoverBackgroundColor: "#000000",
                    pointHoverBorderColor: "#fff",
                    borderWidth: 2,
                    data: @Html.Raw(Json.Serialize(Model.ChartData)),
                    fill: true
                }],
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: '#000',
                        titleColor: '#fff',
                        bodyColor: '#fff',
                        cornerRadius: 4,
                        padding: 10,
                        callbacks: {
                            label: function (context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                if (context.parsed.y !== null) {
                                    label += '₺' + context.parsed.y;
                                }
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    x: {
                        grid: {
                            display: false,
                            drawBorder: false
                        }
                    },
                    y: {
                        grid: {
                            color: "#f0f0f0",
                            borderDash: [5, 5],
                            drawBorder: false
                        },
                        ticks: {
                            callback: function (value) { return '₺' + value; }
                        }
                    }
                }
            }
        });
    </script>
}
