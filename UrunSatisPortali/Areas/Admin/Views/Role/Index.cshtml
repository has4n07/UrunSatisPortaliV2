@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewData["Title"] = "Rol Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 text-white font-playfair fs-4"><i class="bi bi-shield-lock me-2"></i>Rol Yönetimi</h5>
                <div>
                    <a asp-action="UserList" class="btn btn-outline-light btn-sm me-2">
                        <i class="bi bi-people me-1"></i>Kullanıcılar & Roller
                    </a>
                    <a asp-action="Create" class="btn btn-light btn-sm rounded-0">
                        <i class="bi bi-plus-lg me-1"></i>Yeni Rol
                    </a>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3" style="width: 50%;">Rol Adı</th>
                                <th class="py-3" style="width: 30%;">ID</th>
                                <th class="pe-4 py-3 text-end" style="width: 20%;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var role in Model)
                                {
                                    <tr>
                                        <td class="ps-4 fw-bold">@role.Name</td>
                                        <td class="text-muted small">@role.Id</td>
                                        <td class="pe-4 text-end">
                                            <a asp-action="Edit" asp-route-id="@role.Id"
                                                class="btn btn-sm btn-outline-dark rounded-0 me-1" title="Düzenle">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <!-- Delete Form -->
                                            <form asp-action="Delete" asp-route-id="@role.Id" method="post" class="d-inline"
                                                onsubmit="return confirm('Bu rolü silmek istediğinize emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-danger rounded-0" title="Sil">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="3" class="text-center py-5 text-muted">
                                        <i class="bi bi-info-circle display-4 mb-3 d-block"></i>
                                        Henüz bir rol oluşturulmamış.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
