@using UrunSatisPortali.Models
@model List<ApplicationUser>

@{
    ViewData["Title"] = "Kullanıcı Rol Yönetimi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center py-3">
                <h5 class="mb-0 text-white font-playfair fs-4"><i class="bi bi-people me-2"></i>Kullanıcılar ve Roller
                </h5>
                <a asp-action="Index" class="btn btn-outline-light btn-sm rounded-0">
                    <i class="bi bi-arrow-left me-1"></i>Rol Listesine Dön
                </a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="ps-4 py-3">Kullanıcı</th>
                                <th class="py-3">Email</th>
                                <th class="py-3">Mevcut Roller</th>
                                <!-- This would require view-model enhancement for perf, but okay for MVP -->
                                <th class="pe-4 py-3 text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold">
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(user.ProfilePhotoPath))
                                            {
                                                <img src="@user.ProfilePhotoPath" class="rounded-circle me-2"
                                                    style="width: 32px; height: 32px; object-fit: cover;" alt="user" />
                                            }
                                            else
                                            {
                                                <div class="bg-secondary text-white rounded-circle me-2 d-flex justify-content-center align-items-center"
                                                    style="width: 30px; height: 30px;">
                                                    <i class="bi bi-person-fill small"></i>
                                                </div>
                                            }
                                            @user.NameSurname
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td><span class="badge bg-light text-dark border">Rolleri Düzenle'ye Tıkla</span></td>
                                    <td class="pe-4 text-end">
                                        <a asp-action="ManageUserRoles" asp-route-userId="@user.Id"
                                            class="btn btn-sm btn-dark rounded-0">
                                            <i class="bi bi-shield-check me-1"></i>Rolleri Yönet
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
