@model UrunSatisPortali.ViewModels.UserRolesViewModel

@{
    ViewData["Title"] = "Kullanıcı Rolleri";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-0 shadow-lg mt-4">
            <div class="card-header bg-dark text-white py-3">
                <h5 class="mb-0 text-white font-playfair fs-5">
                    <i class="bi bi-shield-check me-2"></i>Rolleri Yönet: @Model.UserName
                </h5>
                <small class="text-white-50">@Model.Email</small>
            </div>
            <div class="card-body p-4">
                <form asp-action="ManageUserRoles" method="post">
                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-4">
                        <label class="form-label fw-bold mb-3">Bu kullanıcıya atanacak rolleri seçin:</label>

                        <div class="row g-3">
                            @for (int i = 0; i < Model.Roles.Count; i++)
                            {
                                <div class="col-md-6 mb-2">
                                    <div class="form-check p-3 border rounded shadow-sm h-100 hover-zoom">
                                        <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                                        <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" id="role_@i" />
                                        <label class="form-check-label fw-bold ms-2" for="role_@i">
                                            @Model.Roles[i].RoleName
                                        </label>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4 pt-3 border-top">
                        <a asp-action="UserList" class="btn btn-outline-secondary rounded-0 px-4">İptal</a>
                        <button type="submit" class="btn btn-primary rounded-0 px-4">Değişiklikleri Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
