@model List<Urun>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Ürün Listesi</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Urun" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Yeni Ürün Oluştur
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Kategori</th>
                <th>İşlemler</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}
