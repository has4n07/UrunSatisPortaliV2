@model UrunSatisPortali.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Profil Bilgileri</h3>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.CurrentProfilePhotoPath))
                        {
                            <img src="@Model.CurrentProfilePhotoPath" class="rounded-circle img-thumbnail"
                                style="width: 150px; height: 150px; object-fit: cover;" alt="Profil Fotoğrafı" />
                        }
                        else
                        {
                            <img src="/images/default-user.png" class="rounded-circle img-thumbnail"
                                style="width: 150px; height: 150px; object-fit: cover;" alt="Varsayılan Profil Fotoğrafı" />
                        }
                    </div>

                    <form asp-action="Profile" enctype="multipart/form-data" method="post">
                        <div class="mb-3">
                            <label asp-for="AdSoyad" class="form-label"></label>
                            <input asp-for="AdSoyad" class="form-control" />
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <small class="text-muted">Email adresi değiştirilemez.</small>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProfilePhoto" class="form-label"></label>
                            <input asp-for="ProfilePhoto" class="form-control" type="file" accept="image/*" />
                            <span asp-validation-for="ProfilePhoto" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">Kaydet</button>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
