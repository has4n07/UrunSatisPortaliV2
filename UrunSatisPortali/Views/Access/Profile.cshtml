@model UrunSatisPortali.ViewModels.ProfileViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h2 class="text-center mb-5" style="font-family: 'Playfair Display', serif; font-weight: 700;">Profil
                Bilgilerim</h2>

            <div class="bg-white p-4 p-md-5 border" style="box-shadow: 0 2px 15px rgba(0,0,0,0.03);">
                <form asp-action="Profile" method="post" enctype="multipart/form-data">

                    <!-- Profile Photo Section -->
                    <div class="d-flex flex-column align-items-center mb-5">
                        <div class="position-relative mb-3">
                            @if (!string.IsNullOrEmpty(Model.CurrentProfilePhotoPath))
                            {
                                <img src="@Model.CurrentProfilePhotoPath" class="rounded-circle object-fit-cover border"
                                    width="150" height="150" alt="Profil Resmi" style="border-color: #eee !important;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-light d-flex align-items-center justify-content-center text-secondary border"
                                    style="width: 150px; height: 150px;">
                                    <i class="bi bi-person fs-1"></i>
                                </div>
                            }
                        </div>

                        <div class="text-center">
                            <label class="btn btn-outline-dark btn-sm rounded-0">
                                <i class="bi bi-camera me-2"></i>Fotoğrafı Değiştir
                                <input asp-for="ProfilePhoto" type="file" accept="image/*" hidden
                                    onchange="document.getElementById('file-name').textContent = this.files[0].name" />
                            </label>
                            <div class="mt-2 text-muted small" id="file-name"></div>
                        </div>
                    </div>

                    <!-- Form Fields -->
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="NameSurname"
                                class="form-label fw-bold small text-muted text-uppercase tracking-wide">AD
                                SOYAD</label>
                            <input asp-for="NameSurname" class="form-control rounded-0 p-3" placeholder="Ad Soyad"
                                style="background-color: #fcfcfc; border-color: #eee;" />
                            <span asp-validation-for="NameSurname" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email"
                                class="form-label fw-bold small text-muted text-uppercase tracking-wide">E-POSTA
                                (DEĞİŞTİRİLEMEZ)</label>
                            <input asp-for="Email" class="form-control rounded-0 p-3 text-muted" readonly
                                style="background-color: #f8f9fa; border-color: #eee;" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PhoneNumber"
                                class="form-label fw-bold small text-muted text-uppercase tracking-wide">TELEFON
                                NUMARASI</label>
                            <input asp-for="PhoneNumber" class="form-control rounded-0 p-3"
                                placeholder="Telefon Numarası" style="background-color: #fcfcfc; border-color: #eee;" />
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Gender"
                                class="form-label fw-bold small text-muted text-uppercase tracking-wide">CİNSİYET</label>
                            <select asp-for="Gender" class="form-select rounded-0 p-3"
                                style="background-color: #fcfcfc; border-color: #eee;">
                                <option value="">Seçiniz</option>
                                <option value="Erkek">Erkek</option>
                                <option value="Kadın">Kadın</option>
                                <option value="Belirtmek İstemiyorum">Belirtmek İstemiyorum</option>
                            </select>
                        </div>

                        <div class="col-12">
                            <label asp-for="BirthDate"
                                class="form-label fw-bold small text-muted text-uppercase tracking-wide">DOĞUM
                                TARİHİ</label>
                            <input asp-for="BirthDate" type="date" class="form-control rounded-0 p-3"
                                style="background-color: #fcfcfc; border-color: #eee;" />
                        </div>

                        <div class="col-12">
                            <label asp-for="Address"
                                class="form-label fw-bold small text-muted text-uppercase tracking-wide">ADRES</label>
                            <textarea asp-for="Address" class="form-control rounded-0 p-3" rows="3" placeholder="Adres"
                                style="background-color: #fcfcfc; border-color: #eee;"></textarea>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mt-5">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-muted small">
                            <i class="bi bi-arrow-left me-1"></i> Mağazaya Dön
                        </a>
                        <button type="submit" class="btn btn-black px-5 py-3 rounded-0 fw-bold hover-lift">
                            KAYDET
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .tracking-wide {
        letter-spacing: 1px;
    }

    .btn-black {
        background: black;
        color: white;
        transition: all 0.2s;
    }

    .btn-black:hover {
        background: #333;
        color: white;
        transform: translateY(-2px);
    }

    .form-control:focus {
        border-color: black;
        box-shadow: none;
        background-color: white !important;
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
