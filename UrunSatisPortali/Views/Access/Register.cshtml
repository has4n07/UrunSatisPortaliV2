@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - UrunSatisPortali</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-success text-white text-center">
                        <h3>Kayıt Ol</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label asp-for="AdSoyad" class="form-label">Ad Soyad</label>
                                <input asp-for="AdSoyad" class="form-control" placeholder="Ad Soyad" />
                                <span asp-validation-for="AdSoyad" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Adresi</label>
                                <input asp-for="Email" class="form-control" placeholder="ornek@email.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Şifre</label>
                                <input asp-for="Password" class="form-control" placeholder="******" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="******" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
                        </form>
                    </div>
                    <div class="card-footer text-center">
                        <p>Zaten hesabınız var mı? <a asp-action="Login">Giriş Yap</a></p>
                        <a asp-controller="Home" asp-action="Index">Ana Sayfaya Dön</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>
</html>
