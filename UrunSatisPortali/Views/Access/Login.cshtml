@model UrunSatisPortali.Models.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - HASAN ESMER</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@700;900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
</head>

<body class="bg-light">

    <div class="d-flex align-items-center justify-content-center min-vh-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5 col-lg-4">
                    <div class="text-center mb-4">
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-dark">
                            <h2 class="fw-bold" style="font-family: 'Playfair Display', serif; letter-spacing: 1px;">
                                HASAN ESMER</h2>
                        </a>
                    </div>

                    <div class="card border-0 shadow-sm rounded-3">
                        <div class="card-body p-4 p-md-5">
                            <div class="text-center mb-4">
                                <h4 class="fw-bold mb-1" style="font-family: 'Playfair Display', serif;">Hoş Geldiniz
                                </h4>
                                <p class="text-muted small">Devam etmek için lütfen giriş yapın.</p>
                            </div>

                            <form asp-action="Login" method="post">
                                <div class="mb-3 form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                    <label asp-for="Email">E-Posta Adresi</label>
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="mb-3 form-floating">
                                    <input asp-for="Password" type="password" class="form-control"
                                        placeholder="Şifre" />
                                    <label asp-for="Password">Şifre</label>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <div class="d-grid gap-2 mb-4">
                                    <button type="submit" class="btn btn-black btn-lg">GİRİŞ YAP</button>
                                </div>

                                <div class="text-center">
                                    <p class="small text-muted mb-3">veya</p>
                                    <a asp-action="GoogleLogin" class="btn btn-outline-dark w-100 mb-3">
                                        <i class="bi bi-google me-2"></i>Google ile Devam Et
                                    </a>

                                    <div class="border-top pt-3 mt-3">
                                        <p class="small mb-0 text-muted">Hesabınız yok mu? <a asp-action="Register"
                                                class="text-dark fw-bold text-decoration-none">Hesap Oluştur</a></p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="text-muted small text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i> Mağazaya Dön
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    @await Component.InvokeAsync("Notyf")
</body>

</html>
