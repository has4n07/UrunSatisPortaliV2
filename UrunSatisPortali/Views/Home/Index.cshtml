@model UrunSatisPortali.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
}

<!-- Brand Header -->
<div class="text-center py-5 bg-black text-white mb-5">
    <h1 class="display-1 fw-bold" style="font-family: 'Playfair Display', serif; letter-spacing: -2px;">HASAN ESMER</h1>
</div>

<div class="container">
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-5 g-4 pt-5">
        @foreach (var urun in Model.NewArrivals)
        {
            <div class="col">
                <div class="product-card h-100 position-relative">
                    <!-- Badge -->
                    <div class="badge-new">YENİ</div>

                    <!-- Image Container -->
                    <a asp-action="Details" asp-route-id="@urun.Id" class="d-block mb-3 product-image-container">
                        @if (!string.IsNullOrEmpty(urun.ImagePath))
                        {
                            <img src="@urun.ImagePath" class="img-fluid" alt="@urun.Name">
                        }
                        else
                        {
                            <img src="https://via.placeholder.com/500x500?text=Urun+Resmi" class="img-fluid" alt="@urun.Name">
                        }
                    </a>

                    <!-- Product Info -->
                    <div class="card-body p-0 text-center">
                        <h5 class="card-title mb-1">
                            <a asp-action="Details" asp-route-id="@urun.Id" class="text-reset">@urun.Name</a>
                        </h5>
                        @if (urun.Category != null)
                        {
                            <p class="text-muted small mb-1" style="font-size: 0.75rem;">@urun.Category.Name</p>
                        }
                        <p class="product-price mb-0">@urun.Price.ToString("c")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Best Sellers Section -->
<div id="best-sellers" class="container py-5 mt-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold" style="font-family: 'Playfair Display', serif;">Çok Satanlar</h2>
        <p class="text-muted">En çok tercih edilen parçalarımız.</p>
    </div>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4 justify-content-center">
        @foreach (var urun in Model.BestSellers)
        {
            <div class="col">
                <div class="product-card h-100 position-relative">
                    <a asp-action="Details" asp-route-id="@urun.Id">
                        <div class="product-image-container mb-3">
                            @if (!string.IsNullOrEmpty(urun.ImagePath))
                            {
                                <img src="@urun.ImagePath" class="img-fluid" alt="@urun.Name">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/500x500?text=Urun+Resmi" class="img-fluid"
                                    alt="@urun.Name">
                            }
                            <div class="badge-new">BEST</div>
                        </div>
                    </a>
                    <div class="card-body p-0 text-center">
                        <h5 class="card-title mb-1">@urun.Name</h5>
                        <p class="product-price mb-0">@urun.Price.ToString("c")</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- About Section -->
<section id="about-section" class="about-section py-5 mt-5">
    <div class="container text-center py-5">
        <h2 class="mb-4" style="font-family: 'Playfair Display', serif;">Biz Kimiz?</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <p class="lead text-muted mb-4">
                    HASAN ESMER, modern estetiği minimalist tasarımla buluşturan bir yaşam tarzı markasıdır.
                    Kalite, sadelik ve özgünlük ilkeleriyle yola çıkarak, günlük yaşamınıza değer katan parçalar
                    tasarlıyoruz.
                </p>
            </div>
        </div>
    </div>
</section>
