@model IEnumerable<Urun>

<div class="row pb-3">
    @foreach (var urun in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card h-100 border-0">
                        <img src="@urun.ResimYolu" class="card-img-top rounded" style="height: 250px; object-fit: cover;" />
                        <div class="card-body d-flex flex-column">
                            <div class="pl-1 mb-auto">
                                <p class="card-title h5 text-primary">@urun.Ad</p>
                                <p class="card-title text-info">by <b>@urun.Kategori.Ad</b></p>
                            </div>
                            <div class="pl-1">
                                <p>Fiyat: <b>@urun.Fiyat.ToString("c")</b></p>
                            </div>
                        </div>
                    </div>
                    <div class="p-2">
                        <a asp-action="Details" asp-route-productId="@urun.Id" class="btn btn-primary form-control">
                            Detaylar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
