@{
    
    var currentAction = ViewContext.RouteData.Values["Action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] - Admin Paneli</title>

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="shortcut icon" href="~/admin-assets/img/icons/icon-48x48.png" />
    <link href="~/admin-assets/css/app.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
</head>

<body>
    <div class="wrapper">

        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" asp-controller="Admin" asp-action="Index">
                    <span class="align-middle">Admin Paneli</span>
                </a>

                <ul class="sidebar-nav">
                    <li class="sidebar-header">
                        Yönetim
                    </li>

                    <li class="sidebar-item @(currentAction == "Index" ? "active" : "")">
                        <a class="sidebar-link" asp-controller="Admin" asp-action="Index">
                            <i class="align-middle" data-feather="sliders"></i> <span class="align-middle">Dashboard</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(currentAction == "Kategoriler" ? "active" : "")">
                        <a class="sidebar-link" asp-controller="Admin" asp-action="Kategoriler">
                            <i class="align-middle" data-feather="grid"></i> <span class="align-middle">Kategoriler</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(currentAction == "Urunler" ? "active" : "")">
                        <a class="sidebar-link" asp-controller="Admin" asp-action="Urunler">
                            <i class="align-middle" data-feather="shopping-bag"></i> <span class="align-middle">Ürünler</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i class="align-middle" data-feather="arrow-left-circle"></i> <span class="align-middle">Ana Menüye Dön</span>
                        </a>
                    </li>

                    <li class="sidebar-item @(currentAction == "Index" ? "active" : "")">

                </ul>
            </div>
        </nav>
        <div class="main">
            <nav class="navbar navbar-expand navbar-light navbar-bg">
                <a class="sidebar-toggle js-sidebar-toggle">
                    <i class="hamburger align-self-center"></i>
                </a>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav navbar-align">
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </nav>
            <main class="content">
                <div class="container-fluid p-0">

                    @RenderBody()
                </div>
            </main>

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/admin-assets/js/app.js"></script>

    @RenderSection("Scripts", required: false)

    <script>
        document.addEventListener("DOMContentLoaded", function(event) {
            feather.replace()
        });
    </script>
</body>

</html>