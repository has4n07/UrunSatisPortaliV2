@model UrunSatisPortali.Models.Kategori
@{
    ViewData["Title"] = "Kategori Sil";
}
<h1>Kategori Sil</h1>
<h3>Bu kategoriyi silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Ad)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ad)</dd>
    </dl>
    <form asp-action="KategoriSil" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Kategoriler" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>