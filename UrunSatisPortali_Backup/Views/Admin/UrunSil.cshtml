@model UrunSatisPortali.Models.Urun
@{
    ViewData["Title"] = "Ürün Sil";
}
<h1>Ürün Sil</h1>
<h3>Bu ürünü silmek istediğinizden emin misiniz?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Ad)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Ad)</dd>
        <dt class="col-sm-2">Kategori</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Kategori.Ad)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Fiyat)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Fiyat)</dd>
    </dl>
    <form asp-action="UrunSil" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Urunler" class="btn btn-secondary">Listeye Geri Dön</a>
    </form>
</div>